@model Instructor

<form asp-action="Create"
      asp-controller="Instructor"
      method="post"
      class="me-auto ms-auto p-3 w-50" 
      style="border-radius: 8px;
             box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">
	<h1 class="mb-3 text-center" style="border-bottom: 1px solid #262626">Add Instructor</h1>
	<div class="mb-3 row">
		<div class="col-6">
			<label class="mb-2" for="InstructornameInput">Instructor Name</label>
			<input asp-for="InstructorName" type="text" class="form-control" id="InstructornameInput" />
		</div>
		<div class="col-6">
			<label class="mb-2" for="CoursenameInput">Course Name</label>
			<input asp-for="CourseName" type="text" class="form-control" id="CoursenameInput" />
		</div>
	</div>

	<div class="d-flex justify-content-center mb-3 row">
		<div class="col-6">
			<label class="mb-2" for="ratingInput">Rating</label>
			<select asp-for="Rating" class="form-control" id="ratingInput">
				<option disabled selected value="">Choose...</option>
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
		</div>
	</div>
	
	<div class="row">
		<input asp-action="Create" asp-controller="Instructor" class="btn btn-primary me-auto ms-auto w-auto"
		       type="submit" value="Add Instructor" />
	</div>
</form>