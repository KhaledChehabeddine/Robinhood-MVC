@model Previous

<div class="container-fluid me-auto ms-auto p-3 w-50"
     style="border-radius: 8px;
            box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">
	<h1 class="mb-3 text-center" style="border-bottom: 1px solid #262626">Previous Details</h1>
	<div class="row">
		<div class="col-6 fw-bold">Previous Name: <p class="fw-normal">@Model.Filename</p>
		</div>
		<div class="col-6 fw-bold text-end">Course Name: <p class="fw-normal">@Model.CourseName</p>
		</div>
	</div>
	<div class="mb-3 row">
		<div class="align-items-center col-12 d-flex justify-content-center fw-bold">
			Rating:&nbsp
			@for (var i = 0; i < @Model.Rating; i++)
			{
				<i class="fa fa-star p-0 text-warning w-auto"></i>
			}
			@for (var i = 0; i < 5 - @Model.Rating; i++)
			{
				<i class="fa-regular fa-star p-0 text-warning w-auto"></i>
			}
		</div>
	</div>
	<div class="row">
		<div class="col-12 d-flex gap-1 justify-content-center">
			<a asp-action="Edit" asp-controller="Previous" asp-route-id="@Model.Id"
			   class="btn btn-primary w-auto">Edit</a>
			<a asp-action="Index" asp-controller="Previous" class="btn btn-secondary w-auto">Back</a>
		</div>
	</div>
</div>