@model Previous

<form asp-action="Create"
      asp-controller="Previous"
      method="post"
      class="me-auto ms-auto p-3 w-50" 
      style="border-radius: 8px;
             box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);">
	<h1 class="mb-3 text-center" style="border-bottom: 1px solid #262626">Add Previous</h1>
	<div class="mb-3 row">
		<div class="col-6">
			<label class="mb-2" for="FilenameInput">Previous Name</label>
			<input asp-for="Filename" type="text" class="form-control" id="FilenameInput" />
		</div>
		<div class="col-6">
			<label class="mb-2" for="courseNameInput">Course Name</label>
			<input asp-for="CourseName" type="text" class="form-control" id="courseNameInput" />
		</div>
	</div>

	<div class="mb-3 row">
		<div class="col-6">
			<label for="exampleFormControlFile1">Upload file</label>
			<input type="file" accept=".pdf"  class="form-control-file mt-2" id="exampleFormControlFile1">
		</div>
		<div class="col-6">
			<label class="mb-2" for="ratingInput">Rating</label>
			<select asp-for="Rating" class="form-control" id="ratingInput">
				<option disabled selected value="">Choose...</option>
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
		</div>
	</div>
	
	<div class="row">
		<input asp-action="Create" asp-controller="Previous" class="btn btn-primary me-auto ms-auto w-auto"
		       type="submit" value="Add Previous" />
	</div>
</form>